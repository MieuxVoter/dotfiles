[DEFAULT]
install = 
    if test -f requirements.txt; then
        pip install -r requirements.txt
    fi
    if test -f setup.py; then
        pip install -e .
    fi

[src/PhD]
checkout = git clone 'git@github.com:guhur/PhD.git' 'PhD'

[src/mime]
checkout = git clone --branch rlons 'git@github.com:ikalevatykh/mime.git' 'mime'

[src/auto-boring]
